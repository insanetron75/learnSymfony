{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/login/login.css') }}">
{% endblock %}
{% block body %}
    {{ parent() }}
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                {% if error %}
                    <div class="alert alert-danger">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                <h1>Login</h1>
                {{ form_start(form) }}
                    {{ form_row(form._username) }}
                    {{ form_row(form._password) }}

                    <button type="submit" class="btn btn-success">Login <span class="fa fa-lock"></span></button>
                {{ form_end(form) }}
                <form action="{{ path('new_user') }}" class="reg-form">
                    <button type="submit" class="btn btn-primary">Register <span class="fa fa-plus"></span></button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}