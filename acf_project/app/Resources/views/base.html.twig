<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>{% block title %}ACF Tools{% endblock %}</title>

    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('vendor/bootstrap/css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('vendor/fontawesome/css/font-awesome.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    {% endblock %}
</head>
<body>
<div id="navDiv">
    {% block nav %}
        <nav>
            <ul class="topLinks">
                <li><a href=" {{ path('home_page') }}">Home</a></li>
                <li><a href="#">Personnel</a>
                    <ul>
                        <li><a href="{{ path('instructors_home') }}">Instructors <span class="fa fa-users"></span></a></li>
                        <li><a href="{{ path('cadets_home') }}">Cadets <span class="fa fa-child"></span></a></li>
                    </ul>
                </li>
                <li><a href="">Training</a>
                    <ul>
                        <li><a href="#">Lesson Plans</a></li>
                        <li><a href="#">Training Programs</a></li>
                    </ul>
                </li>
                <li><a href="{{ path('syllabus_home') }}">Syllabus</a>
                    <ul>
                        <li>
                            <a href="{{ path('selected_syllabus', {'syllabusName': 'fieldcraft'}) }}">
                                Fieldcraft
                            </a>
                        </li>
                        <li>
                            <a href="{{ path('selected_syllabus', {'syllabusName': 'footDrill'}) }}">
                                Foot Drill
                            </a>
                        </li>
                        <li>
                            <a href="{{ path('selected_syllabus', {'syllabusName': 'militaryKnowledge'}) }}">
                                Military Knowledge
                            </a>
                        </li>
                        <li><a href="#">Navigation</a></li>
                        <li><a href="#">SAA</a></li>
                        <li><a href="#">First Aid</a></li>
                        <li><a href="#">Expedition</a></li>
                    </ul>
                </li>
                {% if is_granted('ROLE_USER') %}
                    <li class="loginLink">
                        <a href="{{ path('account_home') }}">Account <span class="fa fa-user"></span></a>
                        <ul>
                            {% if is_granted('ROLE_DETACHMENT_2IC') %}
                                <li><a href="{{ path('unit_management') }}">Unit <span
                                                class="fa fa-building"></span></a></li>
                            {% endif %}
                            <li><a href="{{ path('security_logout') }}">Logout <span class="fa fa-lock"></span></a>
                            </li>
                        </ul>
                    </li>
                {% else %}
                    <li class="loginLink">
                        <a href="{{ path('security_login') }}">Login <span class="fa fa-lock"></span></a>
                    </li>
                {% endif %}
            </ul>
        </nav>
    {% endblock %}
</div>
<div class="main-content">
    {% block flash %}
        {% for msg in app.session.flashBag.get('success') %}
            <div class="alert alert-success">
                {{ msg }}
            </div>
        {% endfor %}
    {% endblock %}
    {% block body %}
    {% endblock %}
</div>

<div class="footer">
    <p class="footer-text">Made By T.Hasler</p>
</div>

{% block javascripts %}
    <script src="{{ asset('js/jquery.min.js') }}"></script>
    <script src="{{ asset('vendor/bootstrap/js/bootstrap.min.js') }}"></script>
{% endblock %}
</body>
</html>
